/*banner*/
page{background-color: #f1f1f1;}
.detailed_head{
  position: relative;
}
.head_banner{
  background-color: #cdcdcd;
}
.head_banner>swiper{
  height: 500rpx;
}
.banner_image{
  width: 100%;
  height: 600rpx;
}
/*news*/
.news_ul{
  padding: 10rpx;
  background-color: #d8f1ff;
}
.news_li{
  display: inline-block;
  color: #008cd7;
  border-radius: 10rpx;
  padding:5rpx 20rpx ;
}
/*info*/
.hotels_info{
  padding: 20rpx;
  background-color: #fff;
}
.hotels_name{
  font-size: 32rpx;
  font-weight: 600;
  padding-right: 20rpx;
}
.room_name{
  color: #999;
}
.time_ul{
  display: flex;
  margin-top: 20rpx;
}
.time_li{
  flex: 1 1 auto;
}
.time_li_t1{
  color: #999;
  font-size: 24rpx;
}
.time_li_t2{
  color: #000;
  font-size: 30rpx;
}
.time_li_t3{
  color: #000;
  font-size: 24rpx;
}
.time_totle{
  border-left:1px solid #cdcdcd ;
  margin-top: 35rpx;
  text-align: center;
}
/*fill*/
.hotels_fill{
  display: flex;
}
.fill_form{
  margin:30rpx 0rpx 30rpx 30rpx;
  padding:10rpx 20rpx;
  border-top-left-radius:10rpx ;
  border-bottom-left-radius:10rpx ;
  background-color: #fff;
  flex: 1 1 auto;
}
.fill_li{
  padding: 20rpx 0rpx;
  position: relative;
}
.fill_li:first-child{
  border-bottom: 1px solid #f1f1f1;
}
.fill_li_disabled{
  opacity: 0.5;
}
.fill_li:last-child{
  border-bottom: 0px;
}
.fill_li>text{
  position: absolute;
  top: 25rpx;
  left: 10rpx;
}
.fill_li>input{
  margin-left: 160rpx;
}
.room_num{
  text-align: right;
  padding: 10rpx;
  margin: auto;
}
.room_num_btn{
  display: inline-block;
  width: 40rpx;
  height: 40rpx;
  background-color: #fff;
  color: #fff;
  margin: -7rpx 20rpx;
}
.room_num_val{
  display: inline-block;
}
.person_selected{
  width: 180rpx;
  margin: 30rpx 30rpx 30rpx 0rpx;
  display: flex;
  background-color: #fff;
  border-top-right-radius:10rpx ;
  border-bottom-right-radius:10rpx ;
  border-left: 1rpx solid #f1f1f1;
}
.person_val{
  align-items:center;
  margin: auto;
  text-align: center;
}
.person_img{
  width: 60rpx;
  height: 60rpx;
}
.person_text{
  color: #999;
}
/*other*/
.other_li{
  background-color: #fff;
  padding:30rpx 20rpx;
  margin-bottom: 20rpx;
}
.other_li>text:nth-child(1){
  padding-right: 20rpx;
}
.other_li:last-child{
  margin-bottom: 0rpx;
}
.other_li_red{
  color: #cc0000;
}
.other_li_right{
  width: 40rpx;
  height: 40rpx;
  float: right;
}
/*breakfast*/
.breakfast_ul{
  margin-top: 30rpx;
  display: flex;
}
.breakfast_li{
  width: 25%;
  float: left;
  border-radius:10rpx ;
  background-color: #cdcdcd;
  text-align: center;
  margin:0rpx 10rpx;
  padding:10rpx 10rpx;
}
.breakfast_li_on{
  background-color: #008cd7;
  color: #fff;
}
.breakfast_li_img{
  margin: auto;
  width: 80rpx;
  height: 80rpx;
}
.breakfast_li_text{
  text-align: center;
  color: #fff;
  font-size: 24rpx;
  border-top: 1rpx solid #fff;
  padding: 10rpx;
}
.breakfast_li_text_on{
  border-top: 1rpx solid #fff;
  color: #fff;
}
/*hotels_introduce*/
.hotels_introduce{
  padding:10rpx 20rpx 120rpx 20rpx;
  color: #999;
}
.introduce_t{
  color: #999;
}
.introduce_t1{
  text-indent: 2em;
}

/*price*/
.hotels_price{
  background-color: #fff;
  padding: 20rpx;
}
.price_li{
  padding: 10rpx 0rpx;
}
.price_li_coupon text{
  color: #039cee;
}
.price_li_details{
  font-size: 24rpx;
  margin-right: 50rpx;
  float: right;
}
.price_li_r{
  float: right;
}
.price_li_rmb{
  float: right;
  font-size: 24rpx;
}
.price_red{
  color: #cc0000;
  font-size: 36rpx;
}
/*房费详细*/
.price_calculation{
  background-color: #f1f1f1;
  padding: 10rpx 0rpx;
  margin: 10rpx 0rpx;
}
.calculation_li{
  padding: 5rpx 20rpx;
}
.calculation_li_left{
  color: #999;
}
.calculation_li_right{
  color: #999;
  float: right;
}
/*立即下单*/
.hotels_btn{
  margin: 30rpx;
  padding: 20rpx;
  background: linear-gradient(to right, #039cee , #753ffd);
  text-align: center;
  color: #fff;
  border-radius: 50rpx;
}
/*foot_pop*/
.black{
  background-color: rgba(0,0,0,0.6);
  position: fixed;
  top: 0rpx;
  left: 0rpx;
  width: 100%;
  height: 100%;
  z-index: 10;
}
.pop_box{
  position: fixed;
  bottom: 0rpx;
  left: 0rpx;
  width: 100%;
  z-index: 50;
}
.pop{
  border-top-left-radius:20rpx ;
  border-top-right-radius:20rpx ;
  background-color: #fff;
  width: 100%;
  position: relative;
  padding-bottom: 100rpx;
}
.pop_h1{
  padding: 20rpx;
  text-align: left;
  background-color: #f1f1f1;
}
.pop_del{
  position: absolute;
  top: 10rpx;
  right: 20rpx;
  width: 60rpx;
  height: 60rpx;
}
.info_body{
  margin: 0rpx 20rpx;
  overflow-y: scroll;
}
.info_price_ul{
  padding: 10rpx 0rpx;
  border-bottom: 1rpx solid #cdcdcd;
}
.info_price_date{
  max-height: 420rpx;
  overflow-x: scroll;
}
.info_price_ul:last-child{
  border:0rpx;
}
.info_body text{
  font-size: 24rpx;
}
.info_attr_val{
  display: inline-block;
  color: #999;
  width: 5em;
  text-align: right;
  padding-right:1em ;
}
.info_attr_s{
  display: inline-block;
  width: 50%;
  padding: 10rpx;
}
.info_attr_b{
  display: inline-block;
  width: 100%;
  padding: 10rpx;
}
.price_subtotal{
  color: #cc0000;
}
/*foot_btn*/
.hotels_foot_btn{
  position: fixed;
  left: 0rpx;
  bottom: 0rpx;
  width: 100%;
  background-color: #fff;
  display: flex;
  box-shadow: 0rpx 5rpx 8rpx #999;
  z-index: 100;
}
.foot_btn_flex{
  flex:1 1 auto;
}
.foot_btn_order{
  margin: 10rpx;
  padding: 20rpx;
  background: linear-gradient(to right, #039cee , #346ae8);
  text-align: center;
  color: #fff;
  border-radius: 10rpx;
}
.foot_btn_details{
  color: #039cee;
  text-align: right;
  padding: 30rpx;
}
.foot_btn_money{
  text-align: left;
  padding: 30rpx;
}
.btn_money_t1{
  font-size: 24rpx;
}
.btn_money_t2{
  color: #cc0000;
  font-size: 24rpx;
}
.btn_money_t3{
  color: #cc0000;
  font-size: 30rpx;
  font-weight: 800;
}
