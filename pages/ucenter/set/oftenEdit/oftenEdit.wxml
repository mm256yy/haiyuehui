<view>
  <import src="/template/template.wxml"/>
  <view class="form_ul">
    <view class="form_li">
      <text class="form_li_t">真实姓名</text>
      <input class="form_input" value="{{info.name}}" bindinput="bindNameInput" placeholder="请输入真实姓名" />
    </view>
    <view class="form_li">
      <text class="form_li_t">身份证号</text>
      <input class="form_input" value="{{info.identity}}" bindinput="bindIdentityInput" placeholder="请输入真实身份证" />
    </view>
    <view class="form_li">
      <text class="form_li_t">手机号码</text>
      <input class="form_input" value="{{info.mobile}}" bindinput="bindMobileInput" placeholder="请输入手机号码"/>
    </view>
    <view class="form_li">
      <view class="radio_box" bindtap="agree">
        <radio checked="{{isDefault == 1}}" class="agree_radio" ext-class="agree_radio"/>
        <text class="form_mo">设为默认常住人</text>
      </view>
      <view class="form_clean" bindtap="clean">清空</view>
    </view>
    <view class="form_li" wx:if="{{isEdit&&false}}">
      <view class="form_del" bindtap="delete">删除</view>
    </view>
  </view>
  <view class="btn_box">
    <view class="btn_success" bindtap="btnSuccess">确定</view>
  </view>
</view>
