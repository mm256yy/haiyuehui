<view>
  <view class="login_logo">
    <image class="logo_img" mode="widthFix" src="/static/images/addition.png"></image>
  </view>
  <view class="form_box">
    <view class="form_ul">
      <view class="form_left">
        <view class="form_li">
          <input class="form_input" value="{{info.name}}" bindinput="bindNameInput" placeholder="请输入真实名字" />
        </view>
        <view class="form_li">
          <input class="form_input" value="{{info.identity}}" bindinput="bindIdentityInput" placeholder="请输入真实身份证" />
        </view>
      </view>
      <view class="form_right" bindtap="person">
        <view class="form_person">
          <image class="person_img" src="/static/images/selected.png"></image>
          <view class="person_text">人员信息簿</view>
        </view>
      </view>
    </view>
    <view class="form_li">
      <input class="form_input" value="{{info.mobile}}" bindinput="bindMobileInput" placeholder="请输入手机号码"/>
    </view>
    <view class="form_li">
      <input class="form_input" value="{{info.roomNo}}" bindinput="bindRoomInput" placeholder="请输入楼层或房间号"/>
    </view>
    <view class="form_li_slider">
      <view class="slider_time">来访时间：{{visitorTimeS}}</view>
      <view class="slider_li">
        <slider min="15" max="720" step="48" color="#cdcdcd" selected-color="#039cee" value="15" bindchange="slider2change" block-color="#039cee"  bindchanging="sliderChang" step="15"/>
      </view>
    </view>
    <view  class="form_label">按照公安规定来访人员需要如实登记信息</view>
    <view class="btn_box">
      <view class="btn_li" bindtap="startBtn1">确认信息</view>
    </view>
    <!-- <view class="agreement">确认即同意<text class="agreement_href">《海外海酒店协议》</text></view> -->
  </view>
</view>
