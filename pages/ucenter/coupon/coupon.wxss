/* pages/ucenter/coupon/coupon.wxss */
page{background-color: #f1f1f1;}
.coupon_type{
  background-color: #fff;
  display: flex;
}
.type_li{
  padding: 30rpx;
  flex: 1 1 auto;
  text-align: center;
}
.type_li_on{
  color: #008cd7;
  border-bottom: 1px solid #008cd7;
}
/*coupon*/
.coupon_list{
  padding: 20rpx;
}
.coupon_li{
  margin-bottom: 20rpx;
  position: relative;
}
.coupon_ba{
  position: absolute;
  top: 0rpx;
  left: 0rpx;
  width: 100%;
  height: 200rpx;
}
.coupon_box{
  background-color: #fff;
  clear: both;
  border-radius: 20rpx;
  overflow: hidden;
}
.coupon_left{
  width: 250rpx;
  height: 200rpx;
  background: linear-gradient(to right, #039cee , #346ae8);
  float: left;
  padding: 20rpx;
  text-align: center;
}
.coupon_val text{
  color: #fff;
}
.coupon_val text:nth-child(2){
  font-size: 60rpx;
}
.coupon_remarks{
  font-size: 26rpx;
  color: #fff;
}
.coupon_btn{
  background-color: #fff;
  border-radius:50rpx;
  font-size: 26rpx;
  padding: 3rpx;
  color: #008cd7;
  margin-top: 20rpx;
}
.coupon_right{
  padding: 20rpx;
  margin-left: 250rpx;
  height: 200rpx;
  background-color: #fff;
}
.coupon_name{
  margin-bottom: 40rpx;
  font-size: 30rpx;
}
.coupon_time{
  color: #666;
  font-size: 26rpx;
  padding: 10rpx 0rpx;
}
.coupon_time_only{
  color: #cc0000;
  font-size: 26rpx;
  padding: 10rpx 0rpx;
}
.coupon_detailed{
  position: relative;
}
.coupon_detailed text{
  color: #cdcdcd;
  font-size: 24rpx;
}
.coupon_go_img{
  width: 30rpx;
  height: 30rpx;
  border-radius:20rpx;
  border:1rpx solid #cdcdcd;
  position: absolute;
  top: 0rpx;
  right: 0rpx;
}
.coupon_rule{
  background-color: #fff;
  padding: 20rpx;
  margin-top:20rpx;
  border-radius:10rpx ;
}
.rule_t{
  color: #cdcdcd;
  font-size: 22rpx;
}
/*过期*/
.coupon_left_overdue{
  background: #cdcdcd;
}
.coupon_name_overdue{
  color: #cdcdcd;
}
.coupon_btn_overdue{
  color: #cdcdcd;
}
.coupon_time_overdue{
  color: #cdcdcd;
}
