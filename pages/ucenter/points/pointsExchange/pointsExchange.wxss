.exchange_li{
  background-color: #fff;
  margin: 20rpx;
  padding: 20rpx;
  border-radius: 20rpx;
}
.exchange_li_body{
  position: relative;
}
.exchange_li_img{
  width: 160rpx;
  height: 160rpx;
  position: absolute;
  top: 0rpx;
  left: 0rpx;
  background-color: #f1f1f1;
  border-radius: 10rpx;
}
.exchange_li_content{
  margin-left: 180rpx;
}
.exchange_li_title{
  height: 120rpx;
}
.exchange_li_points{
  color: #e66465;
}
.exchange_li_time{
  position: absolute;
  bottom: 0rpx;
  right: 0rpx;
  color: #999;
  font-size: 24rpx;
}