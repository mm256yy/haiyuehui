page{
  background-color: #f1f1f1;
}
/*list*/
.invite_li{
  padding:40rpx 30rpx;
  position: relative;
  border-bottom:1rpx solid #f1f1f1;
  background-color: #fff;
  height: 120rpx;
}
.invite_li:last-child{
  margin-bottom: 100rpx;
}
.invite_li_num{
  width: 50rpx;
  height: 50rpx;
  border-radius:0 0 100% 0;
  background-color: #039cee;
  position: absolute;
  top: 0rpx;
  left: 0rpx;
  text-align: center;
  color: #fff;
  padding-right: 10rpx;
  padding-bottom: 10rpx;
  font-size: 24rpx;
  line-height: 45rpx;
}
.invite_li_content{
  margin-left: 50rpx;
}
.invite_li_time{
  float: right;
  color: #cdcdcd;
  font-size: 24rpx;
}
/*btn*/
.invite_btn{
  width: 100%;
  padding:30rpx;
  position: fixed;
  left: 0rpx;
  bottom: 0rpx;
}
.invite_order{
  width: 100%!important;
  font-size: 28rpx;
  background: linear-gradient(to right, #039cee , #753ffd);
  color: #fff;
  text-align: center;
  padding: 20rpx 10rpx;
  border-radius:50rpx ;
}
/*black*/
.black{
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0rpx;
  left: 0rpx;
  background-color: rgba(0,0,0,0.6);
}
.invite_black{
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0rpx;
  left: 0rpx;
  display: flex;
}
.invite_box{
  margin: auto;
}
.invite_btn_share{
  text-align: center;
  color: #000;
  background-color: #fff;
  font-weight: 800;
  font-size: 30rpx;
  width: 500rpx!important;
  margin: 40rpx;
  padding: 20rpx;
  border: 1rpx solid #f1f1f1;
  border-radius:50rpx;
  line-height: 50rpx;
}
