page{
  background-color: #0f84c7;
}
.code_share{
  position: fixed;
  top: 30rpx;
  right: 30rpx;
  z-index: 100;
}
.code_share_img{
  width: 60rpx;
  z-index: 100;
}
/*code*/
.code_box{
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0rpx;
  left: 0rpx;
  background-color: #0f84c7;
  display: flex;
}
.code_qr{
  width: 80%;
  height: 700rpx;
  margin:200rpx auto ;
  text-align: center;
  padding: 50rpx;
  border-radius:20rpx ;
}
.code_qr_img{
  width: 100%;
}
.code_qr_text{
  color: #cdcdcd;
}
.ba_image{
  width: 100%;
  position: fixed;
  top: 0rpx;
  left: 0rpx;
  z-index: -1;
}
/*pop*/
.pop{
  position: fixed;
  top: 0rpx;
  left: 0rpx;
  display: flex;
  width: 100%;
  height: 100%;
  z-index: 300;
}
.black{
  position: fixed;
  top: 0rpx;
  left: 0rpx;
  width: 100%;
  height: 100%;
  background-color: rgba(0,0,0,0.6);
}
.pop_share{
  width: 100%;
  border-radius: 5px;
  border: 1px solid #cdcdcd;
  align-self: center;
  margin: auto 40px;
  z-index: 560;
}
.share_poster{
  background-color: #fff;
  margin: 20rpx;
  /* height: 600rpx; */
}
.share_poster_img{
  display: inline-block;
  width: 80%;
  height: 500rpx;
}
.share_btn{
  display: flex;
}
.share_btn_li{
  flex: 1 1 auto;
  background-color: #fff;
  text-align: center;
  margin: 20rpx;
  padding: 20rpx;
}
.share_canvas{
  width: 100%;
  height: 1000rpx;
}
.share_canvas_img{
  width: 100%;
  height: 1100rpx;
}