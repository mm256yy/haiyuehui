page {
  background: #f1f1f1;
}
.gift_index{
  /* background-color: gray; */
  width: 100%;
  height: 100%;
}
.gift_menu{
  display: flex;
  background-color: white;
  justify-content:space-around;
}
.gift_menu_li{
  padding: 30rpx 0;
}
.gift_menu_li_on{
  border-bottom:5rpx solid #db0426;
}
.gift_content{
  margin: 20rpx;
}
.gift_title{
  font-weight: 800;
  font-size: 30rpx;
  margin-bottom: 20rpx;
}
.gift_img{
  background-color: white;
  border-radius: 10rpx;
}
.text_style{
  text-align: center;
  padding: 10rpx 0;
}
.img{
  width: 300rpx;
  height: 200rpx;
  margin: 20rpx 20rpx 0 20rpx;
  border-radius: 10rpx;
}

.zero{
  position: fixed;
  top: 50%;
  left: 50%;
  width:50%;
  height: 50%;
  -webkit-transform: translateX(-50%) translateY(-50%);
}
.zeroImg{
  width: 300rpx;
  height: 300rpx;
}
.back{
  color: red;
  border: 1rpx solid red;
  border-radius: 40rpx;
  font-size: 28rpx;
}
.giftcard_list{
  width: 95%;
  background-color: white;
  border-radius:20rpx;
  margin: 20rpx auto;
}
.giftcard_list :nth-of-type(1){
  width: 98%;
  /* padding: 10rpx; */
  margin: 0 auto;
}
.line{
  width: 100%;
  height: 1rpx;
  background-color: gray;
}
.giftcard_list_contentF{
  display: flex;
  justify-content:space-around;
  flex-direction: row;
  margin: 24rpx 0 ;
  padding: 5rpx;
}
.text2{
  flex: 0 0 100rpx;
  line-height: 58rpx;
  text-align: right;
}
.giftcard_list_contentF_r{
  display: flex;
  justify-content:space-around;
}
.giftcard_list_contentF_r image{
  width: 100%;
  height: 100%;
  border-radius: 10rpx;
}
.giftcard_list_contentF_l{
  flex: 0 0 180rpx;
}
.giftcard_list_contentF_l :nth-of-type(1){
  margin-left: 103rpx;
}
.giftcard_list_contentF_l :nth-of-type(2){
  margin-left: 110rpx;
}
.giftcard_list_contentS{
  height: 160rpx;
}
.line{
  width: 100%;
  height: 1rpx;
  background-color: #f1f1f1;
}
.giftcard_list_contentT button{
  background-color: #db0426;
  border-radius: 40rpx;
  color: white;
  font-size: 28rpx;
  height: 60rpx;
  flex: 0 0 180rpx;
  line-height: 30rpx;
}
.cardText{
  color: red;
