}

.zero{
  position: fixed;
  top: 50%;
  left: 50%;
  width:50%;
  height: 50%;
  -webkit-transform: translateX(-50%) translateY(-50%);
}
.zeroImg{
  width: 300rpx;
  height: 300rpx;
}
