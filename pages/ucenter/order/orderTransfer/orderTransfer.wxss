/* pages/ucenter/orderTransfer/orderTransfer.wxss */
/*process*/
.transfer_head{
  margin: 20rpx;
  border-radius: 20rpx;
  padding: 50rpx 20rpx;
}
.transfer_ba{
  position: absolute;
  top: 0rpx;
  left: 0rpx;
  width: 100%;
  z-index: -1;
}
.transfer_process{
  text-align: center;
  margin-bottom: 120rpx;
  display: flex;
}
.transfer_process3{
  margin-bottom: 50rpx;
}
.process_li{
  flex: 1 1 auto;
}
.process_num{
  display: inline-block;
  color: #999;
  width: 120rpx;
  height: 120rpx;
  text-align: center;
  border-radius: 80rpx;
  line-height: 60rpx;
  margin: 0rpx 50rpx;
  padding: 10rpx;
}
.process_num_on{
  color: #fff;
  background-color: rgba(255, 225, 255, 0.5);
}
.process_num_on>.process_img{
  width: 100rpx;
  height: 100rpx;
}
.process_img{
  display: block;
  width: 80rpx;
  height: 80rpx;
  margin: auto;
}
.process_text{
  color: #fff;
  font-size: 24rpx;
  margin-top: 10rpx;
}
/*body*/
/*type*/
.order_type{
  display: flex;
  padding: 60rpx;
}
.order_type_li{
  flex: 1 1 auto;
  margin:20rpx;
  text-align: center;
  width: 300rpx;
  height: 370rpx;
  border-radius:20rpx;
  background-color: #039cee;
  overflow: hidden;
}
.order_type_ba{
  width: 100%;
  height: 100%;
}
.order_type_i{
  text-align: center;
  color: #666;
}
/*input*/
.choose_hotel{
  padding: 20rpx 0rpx;
  border-bottom: 1px solid #f1f1f1;
  color: #666;
}
.hotel_val{
  font-size: 30rpx;
  color: #666;
}
.form_box {
  width: 100%;
  height: auto;
  overflow: hidden;
  padding: 0 40rpx;
  background: #fff;
  margin-top: 100rpx;
}
.form-item {
  height: 96rpx;
  position: relative;
}
.order{
  display: block;
  width: 100%;
  height: 95rpx;
  color: #666;
  font-size: 30rpx;
  border-bottom: 1px solid #f1f1f1;
}
.order_placeholder{
  color: #666;
  font-size: 30rpx;
}
/*card*/
.order_box{
  padding: 30rpx;
}
.order_card{
  padding: 30rpx;
  border: 1rpx solid #f1f1f1;
  border-radius: 10rpx;
}
.order_text{
  padding: 10rpx;
}
.order_t0{
  font-size: 26rpx;
  color: #999;
}
.order_t1{
  font-size: 26rpx;
  color: #000;
}
.order_t2{
  font-size: 26rpx;
  color: #000;
  float: right;
}
.order_details{
  color: #cdcdcd;
  margin-right: 30rpx;
  font-size: 26rpx;
  padding-left: 30rpx;
}
.order_t_red{
  color: #cc0000;
}
/*btn*/
.transfer_btn{
  margin-top: 60rpx;
}
.btn_define{
  background: linear-gradient(to right, #039cee , #753ffd);
  color: #fff;
  border-radius: 40rpx;
  text-align: center;
  padding: 20rpx;
  margin: 20rpx;
}
.btn_again{
  background-color: #e6e4e4;
  color: #666;
  border-radius: 40rpx;
  text-align: center;
  padding: 20rpx;
  margin: 20rpx;
}