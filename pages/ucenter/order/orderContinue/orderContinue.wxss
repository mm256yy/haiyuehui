
/*banner*/
page{background-color: #f1f1f1;}
.detailed_head{
  position: relative;
}
.head_banner{
  background-color: #cdcdcd;
}
.head_banner>swiper{
  height: 500rpx;
}
.banner_image{
  width: 100%;
  height: 600rpx;
}
/*info*/
.hotels_info{
  padding: 20rpx;
  background-color: #fff;
}
.hotels_name{
  font-size: 32rpx;
  font-weight: 600;
  padding-right: 20rpx;
  margin-bottom: 20rpx;
}
.room_name{
  color: #999;
  margin-left: 50rpx;
}
.room_no{
  color: #999;
}
.time_ul{
  display: flex;
  margin-top: 20rpx;
}
.time_li{
  flex: 1 1 auto;
}
.time_li_t1{
  color: #999;
  font-size: 24rpx;
}
.time_li_t2{
  color: #000;
  font-size: 30rpx;
}
.time_li_t3{
  color: #000;
  font-size: 24rpx;
}
.time_totle{
  border-left:1px solid #cdcdcd ;
  margin-top: 35rpx;
  text-align: center;
}
/*fill*/
.hotels_fill{
  margin:30rpx ;
  padding:20rpx 20rpx;
  border-radius:10rpx ;
  background-color: #fff;
}
.fill_h1{
  padding:10rpx 20rpx;
}
.fill_h1_tip{
  color: #cc0000;
  font-size: 22rpx;
  padding-left: 20rpx;
}
.clear{
  clear:both;
}
.fill_day_ul{
  text-align: center;

}
.fill_day_li{
  float: left;
  width: 33%;
  display: inline-block;
  padding: 10rpx 20rpx;
}
.day_li_btn{
  color: #039cee;
  background-color: #FFF;
  border-radius:50rpx ;
  padding: 15rpx 20rpx;
  border: 1rpx solid #039cee;
}
.day_li_half{
  position: relative;
}
.day_li_on{
  color: #fff;
  background: linear-gradient(to right, #039cee , #346ae8);
}
.custom_ul{
  margin: 50rpx;
  text-align: center;
}
.custom_btn{
  display: inline-block;
  height: 70rpx;
  width: 70rpx;
  color: #039cee;
  /*background: linear-gradient(to right, #039cee , #346ae8);*/
  border-radius:50rpx;
  padding: 15rpx 20rpx;
  border: 1rpx solid #039cee;
  text-align: center;
}
.custom_num{
  display: inline-block;
  padding: 10rpx 50rpx;
  color: #039cee;
}

/*other*/
.other_li{
  background-color: #fff;
  padding:30rpx 20rpx;
  margin-bottom: 20rpx;
}
.other_li>text:nth-child(1){
  padding-right: 20rpx;
}
/*hotels_introduce*/
.hotels_introduce{
  padding:0rpx 20rpx 120rpx 20rpx;
  color: #999;
}
.introduce_t{
  color: #999;
}
.introduce_t1{
  text-indent: 2em;
}

/*price*/
.hotels_price{
  background-color: #fff;
  padding: 20rpx;
}
.price_li{
  padding: 10rpx;
}
.price_li_r{
  float: right;
}
.price_red{
  color: #cc0000;
  font-size: 36rpx;
}
.price_li_coupon text{ 
  color: #039cee;
}
/*立即下单*/
.hotels_btn{
  margin: 30rpx;
  padding: 20rpx;
  background: linear-gradient(to right, #039cee , #753ffd);
  text-align: center;
  color: #fff;
  border-radius: 50rpx;
}
/*foot_pop*/
.black{
  background-color: rgba(0,0,0,0.6);
  position: fixed;
  top: 0rpx;
  left: 0rpx;
  width: 100%;
  height: 100%;
  z-index: 10;
}
.pop_box{
  position: fixed;
  bottom: 0rpx;
  left: 0rpx;
  width: 100%;
  z-index: 50;
}
.pop{
  border-top-left-radius:20rpx ;
  border-top-right-radius:20rpx ;
  background-color: #fff;
  width: 100%;
  position: relative;
  padding-bottom: 100rpx;
}
.pop_h1{
  padding: 20rpx;
  text-align: left;
  background-color: #f1f1f1;
}
.pop_del{
  position: absolute;
  top: 10rpx;
  right: 20rpx;
  width: 60rpx;
  height: 60rpx;
}
.info_body{
  margin: 0rpx 20rpx;
  overflow-y: scroll;
}
.info_price_ul{
  padding: 10rpx 0rpx;
  border-bottom: 1rpx solid #cdcdcd;
}
.info_price_date{
  max-height: 420rpx;
  overflow-x: scroll;
}
.info_price_ul:last-child{
  border:0rpx;
}
.info_body text{
  font-size: 24rpx;
}
.info_attr_val{
  display: inline-block;
  color: #999;
  width: 5em;
  text-align: right;
  padding-right:1em ;
}
.info_attr_s{
  display: inline-block;
  width: 50%;
  padding: 10rpx;
}
.info_attr_b{
  display: inline-block;
  width: 100%;
  padding: 10rpx;
}
.price_subtotal{
  color: #cc0000;
}
.price_li_details{
  font-size: 24rpx;
  margin-right: 50rpx;
  float: right;
}
.price_li_r{
  float: right;
}
.price_li_rmb{
  float: right;
  font-size: 24rpx;
}
/*foot_btn*/
.hotels_foot_btn{
  position: fixed;
  left: 0rpx;
  bottom: 0rpx;
  width: 100%;
  background-color: #fff;
  display: flex;
  box-shadow: 0rpx 5rpx 8rpx #999;
  z-index: 100;
}
.foot_btn_flex{
  flex:1 1 auto;
}
.foot_btn_order{
  margin: 10rpx;
  padding: 20rpx;
  background: linear-gradient(to right, #039cee , #753ffd);
  text-align: center;
  color: #fff;
  border-radius: 50rpx;
}
.foot_btn_details{
  color: #039cee;
  text-align: right;
  padding: 30rpx;
}
.foot_btn_money{
  text-align: left;
  padding: 30rpx;
}
.btn_money_t1{
  font-size: 24rpx;
}
.btn_money_t2{
  color: #cc0000;
  font-size: 24rpx;
}
.btn_money_t3{
  color: #cc0000;
  font-size: 30rpx;
  font-weight: 800;
}

