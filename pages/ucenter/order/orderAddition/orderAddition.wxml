<view>
  <view class="login_logo">
    <image class="logo_img" mode="widthFix" src="/static/images/addition.jpg"></image>
  </view>
  <view class="form_box">
    <view class="form_ul">
      <view class="form_left">
        <view class="form_li">
          <input class="form_input" cursor-spacing="40rpx" value="{{info.name}}" bindinput="bindNameInput" placeholder="请输入真实名字" />
        </view>
        <view class="input_li">
          <input class="form_input"  cursor-spacing="40rpx" value="{{info.identity}}" bindinput="bindIdentityInput" placeholder="请输入真实身份证" />
        </view>
      </view>
      <view class="form_right" bindtap="person" wx:if="{{additionType != 2}}">
        <view class="form_person">
          <image class="person_img" src="/static/images/selected.png"></image>
          <view class="person_text">同住人簿</view>
        </view>
      </view>
    </view>
    <view class="input_li">
      <input class="form_input"  cursor-spacing="40rpx" value="{{info.mobile}}" bindinput="bindMobileInput" placeholder="请输入手机号码"/>
    </view>
    <view wx:if="{{additionType == 1}}" class="form_label">按照规定进出房间人员需要如实登记</view>
    <view class="btn_box">
      <view class="btn_li" bindtap="startBtn0" wx:if="{{additionType == 0||additionType == 2}}">确认同住人</view>
      <view class="btn_li" bindtap="startBtn1" wx:if="{{additionType == 1}}">确认访客</view>
    </view>
    <view class="agreement">确认即同意<text class="agreement_href" bindtap="goAgree">《海外海酒店协议》</text></view>
  </view>
</view>
