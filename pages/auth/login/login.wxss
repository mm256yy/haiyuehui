.login_logo{
  margin-top: 100rpx;
  text-align: center;
}
.logo_img{
  display: block;
  height: 350rpx;
  width: 100%;
  padding: 20rpx;
  border-radius:20rpx;
  margin:auto ;
}
.login_box{
  width: 100%;
  height: auto;
  overflow: hidden;
  padding: 100rpx 50rpx 20rpx 50rpx;
}
.logo_name{
  margin-top: 30rpx;
  font-size: 40rpx;
  text-align: center;
  font-weight: 800;
}
.logo_content{
  text-align: center;
