/*btn*/

.login_agree{
  text-align: center;
}
.agree_btn{
  color: #008cd7;
}
.agree_radio{
  color: #008cd7 !important;
}
radio .wx-radio-input{
  border-radius:50%;
  width:20px;height:20px;
}
radio .wx-radio-input.wx-radio-input-checked{
  border-color:#008cd7 !important;
  background:#008cd7 !important;
}
radio .wx-radio-input.wx-radio-input-checked::before{
  border-radius:50%;
  width:20px;
  height:20px;
  line-height:20px;
  text-align:center;
  font-size:15px;
  color:#fff;
  background:transparent;
  transform:translate(-50%, -50%) scale(1);
  -webkit-transform:translate(-50%, -50%) scale(1);
}
.wx_login_tel{
  border: 1px solid #008cd7;
  border-radius: 50rpx;
  padding: 30rpx;
  width: 100% !important;
  justify-content: center;
  align-items: center;
  letter-spacing: 3rpx;
}
.wx_login_text1{
  color: #008cd7;
}
.wx_login_wx {
  margin: 40rpx 0 40rpx 0;
  border-radius: 60rpx;
  background: linear-gradient(to right, #039cee , #753ffd);
  padding: 18rpx;
  text-align: center;
  justify-content: center;
  align-items: center;
  letter-spacing: 3rpx;
  width: 100% !important;
  box-shadow: 0rpx 0rpx 8rpx 5rpx #f1f1f1;
}
.wx_login_text2{
  color: #fff;
  display: inline-block;
  font-size: 28rpx;
  position: relative;
  padding-left: 40rpx;
}
.wxImg{
  width: 40rpx;
  height: 40rpx;
  position: absolute;
  top: 0rpx;
  left: -10rpx;
}
.wx-login-text{
  display: inline-block;
  font-size: 28rpx;
  color: #fff;
  position: relative;
}
.account-login-btn {
  width: 90%;
  margin: 0 auto;
  color: #fff;
  font-size: 30rpx;
  height: 96rpx;
  line-height: 96rpx;
  right: 0;
  display: flex;
  justify-content: center;
  align-items: center;
  position: flex;
  bottom: 0;
  left: 0;
  border-radius: 0;
  padding: 0;
  margin-left: 5%;
  text-align: center;
  /* padding-left: -5rpx; */
  border-top-left-radius: 50rpx;
  border-bottom-left-radius: 50rpx;
  border-top-right-radius: 50rpx;
  border-bottom-right-radius: 50rpx;
  letter-spacing: 3rpx;
  background-image: linear-gradient(to right, #9a9ba1 0%, #9a9ba1 100%);
}