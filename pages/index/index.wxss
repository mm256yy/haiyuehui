/**index.wxss**/
/*head*/
.home_head{
  position: relative;
}
.home_swiper{
  background-color: #cdcdcd;
}
.home_swiper>swiper{
  height: 550rpx;
}
.banner_image{
  width: 100%;
  height: 550rpx;
}
/*预定*/
.home_booking{
  position: absolute;
  top: 480rpx;
  right: 0rpx;
  width: 100%;
}
.booking_box{
  margin: 20rpx;
  padding:20rpx 40rpx;
  border: 1px solid #f1f1f1;
  border-radius:40rpx ;
  width: 100;
  background-color: #fff;
  box-shadow: 0rpx 5rpx 8rpx #f1f1f1;
}
.booking_hotels{
  font-size: 35rpx;
  padding: 15rpx 0rpx;
  border-bottom:1px solid #f1f1f1 ;
}
.booking_ul{
  display: flex;
  padding: 20rpx 0rpx;
  border-bottom:1px solid #f1f1f1 ;
}
.booking_li{
  flex: 1 1 auto;
}
.booking_li_totle{
  width: 40rpx;
  padding-top:12rpx ;
}
.booking_li_h5{
  font-size: 24rpx;
}
.booking_li_h6{
  font-size: 40rpx;
}
.booking_btn{
  font-size: 28rpx;
  background: linear-gradient(to right, #039cee , #753ffd);
  padding: 50rpx 0rpx 20rpx 0rpx;
  color: #fff;
  text-align: center;
  padding: 20rpx 10rpx;
  border-radius:50rpx;
  margin-top: 20rpx;
}
.order_btn{
  font-size: 28rpx;
  border: 1rpx solid #753ffd;
  padding: 50rpx 0rpx 20rpx 0rpx;
  color: #753ffd;
  text-align: center;
  padding: 19rpx 10rpx;
  border-radius:50rpx ;
  margin-top: 20rpx;
}
/*精品推荐*/
.home_recommend{
  margin-top: 300rpx;
}

/*会员介绍*/
.home_member{
  padding:40rpx 20rpx 20rpx 20rpx;
}
.home_member image{
  width: 100%;
  border-radius:20rpx;
}
/*pop*/
.black{
  position: fixed;
  top: 0rpx;
  left: 0rpx;
  width: 100%;
  height: 100%;
  background-color: rgba(0,0,0,0.6);
}
.pop_coupon{
  position: fixed;
  width: 100%;
  height: 100%;
  top: 0rpx;
  left: 0rpx;
  text-align: center;
}
.pop_img_box{
  display: flex;
  margin-top: 200rpx;
}
.pop_img{
  margin: auto;
  width: 600rpx;
  height: 658rpx;
}
.pop_del{
  display: block;
  margin: auto;
  width: 80rpx;
  height: 80rpx;
  border-radius:50rpx;
  border: 2rpx solid #fff;
}