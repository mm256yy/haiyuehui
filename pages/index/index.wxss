/**index.wxss**/
/*head*/
.home_head{
  position: relative;
}
.home_swiper{
  background-color: #cdcdcd;
}
.home_swiper>swiper{
  height: 600rpx;
}
.banner_image{
  width: 100%;
  height: 600rpx;
}
/*预定*/
.home_booking{
  position: absolute;
  top: 400rpx;
  right: 0rpx;
  width: 100%;
}
.booking_box{
  margin: 20rpx;
  padding:20rpx 40rpx;
  border: 1px solid #f1f1f1;
  border-radius:40rpx ;
  width: 100;
  background-color: #fff;
  box-shadow: 0rpx 5rpx 8rpx #f1f1f1;
}
.booking_hotels{
  font-size: 35rpx;
  padding: 20rpx 0rpx;
  border-bottom:1px solid #f1f1f1 ;
}
.booking_ul{
  display: flex;
  padding: 20rpx 0rpx;
  border-bottom:1px solid #f1f1f1 ;
}
.booking_li{
  flex: 1 1 auto;
}
.booking_li_totle{
  width: 40rpx;
  padding-top:30rpx ;
}
.booking_li_h5{
  font-size: 22rpx;
}
.booking_btn{
  padding: 50rpx 0rpx 20rpx 0rpx;
}
.booking_btn>view{
  font-size: 28rpx;
  background: linear-gradient(to right, #039cee , #753ffd);
  color: #fff;
  text-align: center;
  padding: 20rpx 10rpx;
  border-radius:50rpx ;
}
/*精品推荐*/
.home_recommend{
  margin-top: 250rpx;
}
/*会员介绍*/
.home_member{
  margin: 20rpx;
  border-radius:20rpx;
  overflow: hidden;
  background: linear-gradient(to right, #2f374f , #2f374f);
}
.home_member image{
  width: 100%;
  height: 320rpx;
}
