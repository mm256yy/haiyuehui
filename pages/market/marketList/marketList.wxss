page{
  background-color: #f1f1f1;
}
/*menu*/
.menu_ul{
  display: flex;
  background-color: #fff;
  width: 100%;
  position: fixed;
  top: 0rpx;
  left: 0rpx;
}
.menu_li{
  flex: 1 1 auto;
  padding: 30rpx 10rpx;
  text-align: center;
}
.menu_li_text{
  padding: 10rpx 0rpx;
  border-bottom: 10rpx solid #fff;
  color: #998;
  text-align: center;
}
.menu_li_text_on{
  color: #666;
  border-bottom: 5rpx solid #fe6f41;
}
/*goods*/
.market_ul{
  padding-top: 80rpx;
  padding-bottom: 120rpx;
  overflow: hidden;
}
.maket_li{
  width: 50%;
  float: left;
}
.maket_li_product{
  border: 2rpx solid #f1f1f1;
  padding: 20rpx;
  background-color: #fff;
}
.goods_img_box{
  width: 100%;
}
.goods_img{
  width: 100%;
  height: 340rpx;
  background-color: #f1f1f1;
}
.goods_text{
  overflow: hidden;
}
.goods_t1{
  height: 3em;
  color: #666;
}
.goods_t2{
  color: #e66465;
}
.goods_t3{
  text-decoration: line-through;
  color: #cdcdcd;
  padding-left: 20rpx;
}