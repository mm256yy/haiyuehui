page{
  background-color: #f1f1f1;
}
/*tip*/
.tip{
  margin: 20rpx;
  padding: 20rpx;
  color: #fff;
  border-radius:20rpx;
  background-color: #313848;
  text-align: center;
}
/*goods*/
.goods_li{
  margin: 20rpx;
  padding: 20rpx;
  background-color: #fff;
  border-radius:20rpx;
  display: flex;
  position: relative;
}
.goods_img{
  width: 200rpx;
  height: 200rpx;
  background-color: #f1f1f1;
}
.goods_text{
  flex: 1 1 auto;
  padding-left: 20rpx;
} 
.goods_price{
  position: absolute;
  left: 240rpx;
  bottom: 20rpx;
}
.goods_num{
  color: #999;
  position: absolute;
  right: 20rpx;
  bottom: 20rpx;
  font-size: 24rpx;
}
/*other*/
.other{
  margin: 20rpx;
  padding:10rpx 40rpx;
  background-color: #fff;
  border-radius:20rpx;
}
.other_li{
  padding:10rpx 0rpx;
  border-bottom: 1rpx solid #f1f1f1;
}
.other_li:last-child{
  border-bottom: 0rpx;
}
.othet_li_t2{
  float: right;
  color: #999;
}
/*foot*/
.foot{
  position: fixed;
  width: 100%;
  left: 0rpx;
  bottom: 0rpx;
  background-color: #fff;
  padding: 20rpx;
}
.foot_li{
  float: right;
  margin: auto;
  padding: 20rpx;
}
.foot_li_pay{
  float: right;
  width: 300rpx;
  background-color: #fe6f41;
  color: #fff;
  text-align: center;
  border-radius: 50rpx;
  padding: 20rpx;
}
.foot_num{
  color: #999;
  font-size: 24rpx;
}
.foot_monry{
  color: #cc0000;
}