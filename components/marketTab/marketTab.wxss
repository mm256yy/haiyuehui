/*foot*/
.foot{
  position: fixed;
  bottom: 0rpx;
  left: 0rpx;
  width: 100%;
  border-top: 2rpx solid #cdcdcd;
}
.foot_ul{
  width: 100%;
  display: flex;
  background-color: #fff;
}
.foot_li{
  flex: 1 1 auto;
  text-align: center;
  margin: auto;
  padding-top: 10rpx;
  padding-bottom: 5rpx;
  position: relative;
}
.foot_li_img{
  width: 54rpx;
  height: 54rpx;
}
.foot_li_name{
  color: #666;
  font-size: 22rpx;
  margin-top: -5rpx;
}
.foot_li_badge{
  display: inline-block;
  background-color: #f00000;
  color: #fff;
  width: 40rpx;
  height: 40rpx;
  border-radius: 20rpx;
  position: absolute;
  top: 5rpx;
  right: 50rpx;
  font-size: 26rpx;
}