// 5050 == 50.50
function moneyFixed(money){
  return (money/100).toFixed(2);
};
//95 == 9.5
function moneyDiscount(money){
  return (money/10).toFixed(1);
};
//5000 == 50
function moneyInteger(money){
  return (parseInt(money/100));
};

//全民营销--推广类型
function bonusType(type){
  if(type == 1){  //新会员并下单奖励
    return "首单奖励";
  }else if(type == 2){  //推广佣金提成
    return "推广住店佣金";
  }else if(type == 3){  //发展会员佣金提成
    return "发展会员佣金";
  }else{ 
    return "其他";
  }
}
//OTA订单类型
function otaType(type){
  if(type == 'CC'){
    return "现付有担保";
  }else if(type == 'CPD'){
    return "闪住";
  }else if(type == 'OTACASH'){
    return "现付无担保";
  }else if(type == 'OTAPREPAY'){
    return "预付";
  }else{
    return "其他类型";
  }
}

//market订单类型
function marketType(type){
  if(type == 0){
    return '未支付';
  }else if(type == 1){
    return '已取消';
  }else if(type == 2){
    return '已支付';
  }else if(type == 3){
    return '已发货';
  }else if(type == 4){
    return '申请退款';
  }else if(type == 5){
    return '退款失败';
  }else if(type == 6){
    return '以结单';
  }else{
    return '未知状态'
  }
}
module.exports = {
  moneyFixed:moneyFixed,
  moneyDiscount:moneyDiscount,
  moneyInteger:moneyInteger, 

  bonusType:bonusType,
  otaType:otaType,
  marketType:marketType,
};
